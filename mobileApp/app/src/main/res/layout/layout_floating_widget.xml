<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/floating_widget_background"
    android:padding="8dp">

    <EditText
        android:id="@+id/floatingInputEditText"
        android:layout_width="200dp"
        android:textSize="48sp"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:hint="@string/type_a_message1"
        android:inputType="" />

    <ImageButton
        android:id="@+id/floatingSendButton"
        android:layout_width="wrap_content"
        android:layout_height="48sp"
        android:contentDescription="@string/send_buttn"
        android:src="@drawable/ic_send"/>
</LinearLayout>
